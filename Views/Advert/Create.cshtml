@model AdvertCreateViewModel

<form asp-action="Create" method="post" class="addAndEditForm">
    <div class="form-group">
        <label asp-for="Title">Tytuł</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price">Cena</label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description">Opis</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Category">Kategoria</label>
        <input asp-for="Category" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary btn-sm">Dodaj</button>
</form>