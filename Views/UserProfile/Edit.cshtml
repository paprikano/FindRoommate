@model UserProfileEditViewModel

<form asp-action="Edit" method="post" class="addAndEditForm">
    <input type="hidden" asp-for="UserProfileId" />
    <div class="form-group">
        <label asp-for="Birthday">Data urodzenia</label>
        <div><span asp-validation-for="Birthday" class="text-danger"></span></div>
        @Html.EditorFor(model => model.Birthday, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
    </div>
    <div class="form-group">
        <label asp-for="Description">Opis</label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Wybierz płeć</label>
        <div><span asp-validation-for="Gender" class="text-danger"></span></div>
        <select asp-for="Gender" class="form-control">
            <option value="Mężczyzna">Mężczyzna</option>
            <option value="Kobieta">Kobieta</option>
        </select>
    </div>
    <div class="form-group">
        <label>Zmień zdjęcie</label>
        <input type="file" name="file" />
    </div>
    <button type="submit" class="btn-primary btn-sm">Zapisz zmiany</button>
    <a asp-action="List" asp-controller="Advert" class="btn btn-secondary btn-sm">Strona główna</a>
</form>