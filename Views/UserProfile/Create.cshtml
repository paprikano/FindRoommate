@model UserProfileCreateViewModel

<h4>Nie masz uzupełnionego profilu, zrób to</h4>
<br />
<form asp-action="Create" enctype="multipart/form-data" method="post" class="addAndEditForm">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Birthday">Data urodzenia</label>
        <div><span asp-validation-for="Birthday" class="text-danger"></span></div>
        @Html.EditorFor(model => model.Birthday, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
    </div>
    <div class="form-group">
        <label asp-for="Description">Opis</label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Wybierz płeć</label>
        <div><span asp-validation-for="Gender" class="text-danger"></span></div>
        <select asp-for="Gender" class="form-control">
            <option value="Mężczyzna">Mężczyzna</option>
            <option value="Kobieta">Kobieta</option>
        </select>
    </div>
    <div class="form-group">
        <label>Dodaj zdjęcie</label>
        <input type="file" name="file" />
    </div>
    <button type="submit" class="btn-primary btn-sm">Dodaj</button>
</form>