@model AppUser

<h4>Edycja użytkownika</h4>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Email">Adres email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label for="password">Hasło</label>
        <input name="password" type="password" class="form-control passwordInput" />
    </div>
    <div class=" form-group">
        <label>Powtórz hasło</label>
        <div class="text-danger confirmPasswordDiv" hidden>Hasła muszą być takie same</div>
        <input type="password" class="form-control confirmPasswordInput" onkeyup="confirmPasswordCheck()" />
    </div>
    <button type="submit" class="btn btn-primary btn-sm saveChangesButton">Zapisz zmiany</button>
    <a asp-action="List" asp-controller="Advert" class="btn btn-secondary btn-sm">Strona główna</a>
</form>